{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "HelloPay API Documentation",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "colors": {
    "primary": "#3B82F6"
  },
  "favicon": "/favicon.svg",
  "api": {
    "playground": {
      "display": "none"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "getting-started/authentication",
              "getting-started/webhooks"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/how-to-create-first-payin",
              "guides/how-to-create-first-payout"
            ]
          },
          {
            "group": "API reference",
            "openapi": "https://api.hellopay.com.co/api-yaml"
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "logo": {
    "light": "/logo/logo.png",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@hellopay.com.co"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Portal de Clientes",
      "href": "https://portal.hellopay.com.co"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
